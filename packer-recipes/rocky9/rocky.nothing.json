{
  "variables": {
    "boot_wait": "3s",
    "disk_size": "10G",
    "iso_checksum": "fc6b306b9fc8d327d7545373ce88c48bd1f7e84d29548814a91e84676b7d26e4",
    "iso_url": "https://download.rockylinux.org/pub/rocky/9/isos/x86_64/Rocky-9.0-x86_64-boot.iso",
    "memsize": "8192",
    "numvcpus": "4"
  },
  "builders": [
    {
      "type": "qemu",
      "accelerator": "kvm",
      "communicator": "none",
      "boot_command": [
        "<up><tab><bs><bs><bs><bs><bs> ",
        "inst.ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/ks.nothing.cfg ",
        "inst.cmdline",
        "<enter><wait>"
      ],
      "boot_wait": "{{ user `boot_wait` }}",
      "disk_size": "{{ user `disk_size` }}",
      "iso_url": "{{ user `iso_url` }}",
      "iso_checksum": "{{ user `iso_checksum` }}",
      "headless": true,
      "cpus": "{{ user `numvcpus` }}",
      "memory": "{{ user `memsize` }}",
      "vnc_bind_address": "0.0.0.0",
      "http_directory": "http",
      "shutdown_timeout": "3h",
      "qemuargs": [
        ["-serial", "stdio"],
        ["-cpu", "host"]
      ]
    }
  ]
}
